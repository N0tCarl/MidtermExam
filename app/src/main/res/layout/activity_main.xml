<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Awesome Bands"
            android:textSize="50sp"
            android:textAlignment="center"
            android:padding="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/playlist"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_marginTop="0.95in" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/atc"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/or" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.3in"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:padding="5dp"
            android:text="Against The Current"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="One Ok Rock"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_margin="2dp"/>
    </LinearLayout>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_marginTop="2.9in" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/imdragg"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tvmps"
            android:clickable="true"
            android:focusable="true"/>
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4.1in"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:textColor="@color/white"
            android:padding="5dp"
            android:text="Imagine Dragons"
            android:textAlignment="center"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:textColor="@color/white"
            android:padding="5dp"
            android:text="The Vamps"
            android:textAlignment="center"
            android:textSize="18dp" />
    </LinearLayout>


</RelativeLayout>